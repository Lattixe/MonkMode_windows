<Window x:Class="MonkMode.Views.CommitmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Are you sure?"
        Width="340" Height="320"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Window.Resources>
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetName="MainContainer"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.15"/>
            <DoubleAnimation Storyboard.TargetName="MainContainer"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="8" To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
        </EventTrigger>
    </Window.Triggers>

    <Border x:Name="MainContainer"
            Background="#0A0A0B"
            BorderBrush="#1C1C1F"
            BorderThickness="1"
            CornerRadius="16"
            Margin="12"
            Opacity="0">
        <Border.RenderTransform>
            <TranslateTransform Y="8"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" ShadowDepth="0" Opacity="0.7" Color="#000000"/>
        </Border.Effect>

        <StackPanel Margin="32,28,32,24">
            
            <!-- Time remaining - hero element -->
            <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock x:Name="TimeRemainingText"
                           Text="08:42"
                           Foreground="#FAFAFA"
                           FontSize="42"
                           FontWeight="Light"
                           FontFamily="Segoe UI"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="remaining"
                           Foreground="#52525B"
                           FontSize="13"
                           HorizontalAlignment="Center"
                           Margin="0,2,0,0"/>
            </StackPanel>

            <!-- Instruction -->
            <TextBlock Text="Type &quot;I give up&quot; to end early"
                       Foreground="#71717A"
                       FontSize="13"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,12"/>

            <!-- Input field -->
            <Border Background="#111113"
                    BorderBrush="#27272A"
                    BorderThickness="1"
                    CornerRadius="8"
                    Height="44"
                    Margin="0,0,0,20">
                <TextBox x:Name="ConfirmInput"
                         Background="Transparent"
                         Foreground="#FAFAFA"
                         BorderThickness="0"
                         FontSize="14"
                         CaretBrush="#FAFAFA"
                         TextAlignment="Center"
                         VerticalContentAlignment="Center"
                         Focusable="True"
                         IsTabStop="True"
                         AcceptsReturn="False"
                         Margin="12,0"
                         TextChanged="ConfirmInput_TextChanged"/>
            </Border>

            <!-- Buttons - stacked vertically -->
            <Button x:Name="BackButton"
                    Click="Back_Click"
                    Cursor="Hand"
                    Margin="0,0,0,10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="#FAFAFA"
                                CornerRadius="8"
                                Height="42">
                            <TextBlock Text="Back to Focus"
                                       Foreground="#09090B"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E4E4E7"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D4D4D8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="GiveUpButton"
                    IsEnabled="False"
                    Click="GiveUp_Click"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="Transparent"
                                CornerRadius="8"
                                Height="36">
                            <TextBlock x:Name="btnText"
                                       Text="End Session"
                                       Foreground="#52525B"
                                       FontSize="13"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="True">
                                <Setter TargetName="btnText" Property="Foreground" Value="#EF4444"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsEnabled" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background" Value="#1C1C1F"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
        </StackPanel>
    </Border>
</Window>
