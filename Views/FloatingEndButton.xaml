<Window x:Class="MonkMode.Views.FloatingEndButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="End Session"
        Width="48" Height="48"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Focusable="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Grid Margin="6">
        <Button x:Name="EndBtn"
                Click="EndButton_Click"
                Cursor="Hand"
                Focusable="True"
                ToolTip="End Focus Session (Ctrl+Shift+Space)">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="#1E1E22"
                            BorderBrush="#3F3F46"
                            BorderThickness="1"
                            CornerRadius="8"
                            Width="36" Height="36">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.4" Color="Black"/>
                        </Border.Effect>
                        
                        <TextBlock Text="âœ•" 
                                   Foreground="#A1A1AA" 
                                   FontSize="14" 
                                   FontWeight="Normal"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#2A2A2E"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#52525B"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#3F3F46"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
