<Window x:Class="MonkMode.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monk Mode"
        Height="700" Width="480"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanMinimize">

    <Border Background="{StaticResource VoidGradient}" 
            CornerRadius="16" 
            BorderBrush="{StaticResource CharcoalBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource AbyssBrush}" 
                    CornerRadius="16,16,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="20,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ§˜" FontSize="24" Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="MONK MODE" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource SoftWhiteBrush}"
                                       FontFamily="{StaticResource HeaderFont}"/>
                            <TextBlock Text="Enter the Void"
                                       FontSize="11"
                                       Foreground="{StaticResource DimTextBrush}"
                                       Margin="0,-2,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="MinimizeButton" 
                                Content="â”€" 
                                Width="32" Height="32"
                                FontSize="14"
                                Background="Transparent"
                                Foreground="{StaticResource MutedTextBrush}"
                                BorderThickness="0"
                                Click="MinimizeButton_Click"
                                Cursor="Hand"/>
                        <Button x:Name="CloseButton" 
                                Content="âœ•" 
                                Width="32" Height="32"
                                FontSize="12"
                                Background="Transparent"
                                Foreground="{StaticResource MutedTextBrush}"
                                BorderThickness="0"
                                Click="CloseButton_Click"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="24,20">
                <StackPanel>
                    
                    <!-- Admin Warning -->
                    <Border x:Name="AdminWarning"
                            Background="#20F59E0B"
                            BorderBrush="{StaticResource WarningBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="14"
                            Margin="0,0,0,20"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš ï¸" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Run as Administrator for DNS blocking"
                                       Foreground="{StaticResource WarningBrush}"
                                       FontSize="13"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Task Name Input -->
                    <TextBlock Text="WHAT'S YOUR MISSION?"
                               Style="{StaticResource SubHeaderLabel}"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"
                               Foreground="{StaticResource MutedTextBrush}"/>
                    
                    <TextBox x:Name="TaskNameInput"
                             Style="{StaticResource ModernTextBox}"
                             Text="Deep Work Session"
                             MaxLength="100"/>

                    <!-- Intensity Selector -->
                    <TextBlock Text="INTENSITY LEVEL"
                               Style="{StaticResource SubHeaderLabel}"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Margin="0,28,0,16"
                               Foreground="{StaticResource MutedTextBrush}"/>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <RadioButton x:Name="FlowMode" 
                                     Grid.Column="0" 
                                     GroupName="Intensity"
                                     Margin="0,0,6,0">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="border" 
                                            Background="{StaticResource ShadowBrush}"
                                            BorderBrush="{StaticResource CharcoalBrush}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="12,16"
                                            Cursor="Hand">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="ðŸŒŠ" FontSize="24" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Flow" 
                                                       Foreground="{StaticResource SoftWhiteBrush}"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,6,0,2"/>
                                            <TextBlock Text="50% Dim"
                                                       Foreground="{StaticResource DimTextBrush}"
                                                       FontSize="11"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource FocusBlueBrush}"/>
                                            <Setter TargetName="border" Property="Background" Value="#20497EFF"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{StaticResource CharcoalBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>

                        <RadioButton x:Name="DeepMode" 
                                     Grid.Column="1" 
                                     GroupName="Intensity"
                                     IsChecked="True"
                                     Margin="6,0">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="border" 
                                            Background="{StaticResource ShadowBrush}"
                                            BorderBrush="{StaticResource CharcoalBrush}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="12,16"
                                            Cursor="Hand">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="ðŸ”¥" FontSize="24" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Deep" 
                                                       Foreground="{StaticResource SoftWhiteBrush}"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,6,0,2"/>
                                            <TextBlock Text="90% Dark"
                                                       Foreground="{StaticResource DimTextBrush}"
                                                       FontSize="11"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource EmberBrush}"/>
                                            <Setter TargetName="border" Property="Background" Value="#20FF6B35"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{StaticResource CharcoalBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>

                        <RadioButton x:Name="BlackoutMode" 
                                     Grid.Column="2" 
                                     GroupName="Intensity"
                                     Margin="6,0,0,0">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="border" 
                                            Background="{StaticResource ShadowBrush}"
                                            BorderBrush="{StaticResource CharcoalBrush}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="12,16"
                                            Cursor="Hand">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="â¬›" FontSize="24" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Blackout" 
                                                       Foreground="{StaticResource SoftWhiteBrush}"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,6,0,2"/>
                                            <TextBlock Text="100% Void"
                                                       Foreground="{StaticResource DimTextBrush}"
                                                       FontSize="11"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PureWhiteBrush}"/>
                                            <Setter TargetName="border" Property="Background" Value="#20FFFFFF"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{StaticResource CharcoalBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                    </Grid>

                    <!-- Blocked Apps Section -->
                    <Expander Margin="0,20,0,0" IsExpanded="False">
                        <Expander.Header>
                            <TextBlock Text="âš”ï¸ BLOCKED APPS (Optional)"
                                       Foreground="{StaticResource MutedTextBrush}"
                                       FontSize="11"
                                       FontWeight="SemiBold"/>
                        </Expander.Header>
                        <StackPanel Margin="0,12,0,0">
                            <TextBlock Text="Process names to kill (one per line):"
                                       Foreground="{StaticResource DimTextBrush}"
                                       FontSize="12"
                                       Margin="0,0,0,8"/>
                            <TextBox x:Name="BlockedAppsInput"
                                     Style="{StaticResource ModernTextBox}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="80"
                                     VerticalScrollBarVisibility="Auto"
                                     Text="steam&#x0a;discord&#x0a;spotify"/>
                        </StackPanel>
                    </Expander>

                    <!-- Blocked Sites Section -->
                    <Expander Margin="0,12,0,0" IsExpanded="False">
                        <Expander.Header>
                            <TextBlock Text="ðŸŒ BLOCKED SITES (Optional)"
                                       Foreground="{StaticResource MutedTextBrush}"
                                       FontSize="11"
                                       FontWeight="SemiBold"/>
                        </Expander.Header>
                        <StackPanel Margin="0,12,0,0">
                            <TextBlock Text="Domains to block (one per line):"
                                       Foreground="{StaticResource DimTextBrush}"
                                       FontSize="12"
                                       Margin="0,0,0,8"/>
                            <TextBox x:Name="BlockedSitesInput"
                                     Style="{StaticResource ModernTextBox}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     Height="80"
                                     VerticalScrollBarVisibility="Auto"
                                     Text="youtube.com&#x0a;twitter.com&#x0a;reddit.com&#x0a;instagram.com&#x0a;facebook.com&#x0a;tiktok.com"/>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>

            <!-- Bottom Action Bar -->
            <Border Grid.Row="2"
                    Background="{StaticResource AbyssBrush}"
                    CornerRadius="0,0,16,16"
                    Padding="24,20">
                <Button x:Name="StartButton"
                        Content="ðŸš€  ENTER THE VOID"
                        Style="{StaticResource PrimaryButton}"
                        FontSize="16"
                        Height="56"
                        Click="StartButton_Click"/>
            </Border>
        </Grid>
    </Border>
</Window>
